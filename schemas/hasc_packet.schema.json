{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mb-x01.org/hasc/hasc_packet.schema.json",
  "title": "HASC Packet",
  "type": "object",
  "required": ["packet_id", "created_at", "source", "human_surface", "structural_claims", "constraints", "transformations"],
  "properties": {
    "packet_id": { "type": "string", "minLength": 8 },
    "created_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "enum": ["human", "system"] },
    "human_surface": { "type": "string", "minLength": 1 },

    "structural_claims": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "subject", "predicate"],
        "properties": {
          "type": { "type": "string", "enum": ["relation", "quantity", "temporal", "causal", "limit"] },
          "subject": { "type": "string" },
          "predicate": { "type": "string" },
          "object": { "type": ["string", "number", "null"] },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    },

    "constraints": {
      "type": "array",
      "items": { "type": "string" }
    },

    "transformations": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["paraphrase", "translate", "compress", "expand", "permute", "normalize_units"]
      }
    },

    "omnia_metrics": {
      "type": "object",
      "properties": {
        "omega_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "sei": { "type": "number", "minimum": 0, "maximum": 1 },
        "iri": { "type": "number", "minimum": 0, "maximum": 1 },
        "pbii_auc": { "type": "number", "minimum": 0, "maximum": 1 },
        "invariance_break": { "type": "boolean" },
        "snrc_candidate": { "type": "boolean" },
        "ice": {
          "type": "object",
          "properties": {
            "impossibility": { "type": "number", "minimum": 0, "maximum": 1 },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "external_refs": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}